@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>

            <li>@Html.ActionLink("Thay đổi thông tin", "ChangeProfile", "Manage")</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>

    }
}
else
{

    <li><i class="fa fa-pencil-square-o"></i>  @Html.ActionLink("Đăng kí", "Register", "Account")</li>
        <li><i class="fa fa-unlock-alt"></i>  @Html.ActionLink("Đăng Nhập", "Login", "Account")</li>
}
